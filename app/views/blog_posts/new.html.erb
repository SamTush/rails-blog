<h1>new post</h1>

<%= form_with model: @blog_post do |form|  %>
    <% if form.object.errors.any? %>
        <div>
            <% form.object.errors.full_messages.each do |message| %>
                <div>
                    <%= message %>
                </div>
            <% end %>
        </div>
    <% end %>

    <div>
        <%= form.label :title%>
        <%= form.text_field :title, class: "border border-1 border-black" %>
    </div>

    <div>
        <%= form.label :image_link %>
        <%= form.text_field :img, class: "border border-1 border-black"  %>
    </div>

    <div>
        <%= form.label :body %>
        <%= form.text_area :body, class: "border border-1 border-black" %>
    </div>

    <div class="btn border border-1 border-black w-fit">
      <%= form.button %>
    </div>
<% end %>